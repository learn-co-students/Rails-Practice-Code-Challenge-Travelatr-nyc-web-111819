<% if flash[:messages] %>
    <font color="red"><h3>There were following errors:</h3></font>
    <ul>
    <% flash[:messages].each do |message| %>
        <li><font color="red"><%= message %></font></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>
    <%= f.label :content %>
    <%= f.text_area :content %><br><br>
    <%= f.label "Choose a blogger" %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name %><br><br>
    <%= f.label "Choose a destination" %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name %><br><br>
    <%= f.submit %>
<% end %>

